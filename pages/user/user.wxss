page{
  background: #e6e6e6;
}
.img_header{
  background-color: #00b38a;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:50rpx 0 60rpx 0; 
}
.img_header .img{
  width:100rpx;
  height:100rpx;
  overflow: hidden;
  background: white;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img image{
  width: 80rpx;
  height:80rpx;

}
.nick_name{
  margin-top: 10rpx;
  font-size: 35rpx;
  color: white;
}

.item{
  display: flex;
  height: 100rpx;
  border-bottom: solid #cdcdcd 0.5rpx;
  align-items: center;
  color:#707070;
  font-size:30rpx;
  background: white;
}

.item image{
  width: 40rpx;
  height: 40rpx;
  margin:0 20rpx;
}
.bg{
  width: 100%;
  height: 30rpx;
}